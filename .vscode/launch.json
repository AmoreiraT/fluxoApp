{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Expo",
      "request": "launch",
      "type": "reactnative",
      "cwd": "${workspaceFolder}",
      "platform": "exponent",
      "sourceMaps": true,
      "enableDebug": true
    },
    {
      "name": "Attach to Expo",
      "request": "attach",
      "type": "reactnative",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
    },
    {
      "name": "Debug Android",
      "request": "launch",
      "type": "reactnative",
      "cwd": "${workspaceFolder}",
      "enableDebug": true,
      "platform": "android",
      "sourceMaps": true,
    },
    {
      "name": "Debug iOS",
      "request": "launch",
      "type": "reactnative",
      "cwd": "${workspaceFolder}",
      "enableDebug": true,
      "platform": "ios",
      "sourceMaps": true,
    }
  ]
}
